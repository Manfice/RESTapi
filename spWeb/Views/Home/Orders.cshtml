@model IEnumerable<spWeb.Models.Entitys.Order>
    
<div class="panel panel-primary">
    <div class="panel-heading">
        Orders
    </div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Customer</th>
            <th colspan="3"></th>
            <th>Total Cost</th>
        </tr>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.Customer</td>
                <td colspan="3"></td>
                <td>@($"{o.TotalCost:c}")</td>
            </tr>
            <tr>
                <th colspan="2"></th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th></th>
            </tr>
            foreach (var ol in o.OrderLines)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@ol.Product.Title</td>
                    <td>@ol.Count</td>
                    <td>@($"{ol.Product.Price:c}")</td>
                    <td></td>
                </tr>
            }
        }
    </table>
</div>

